  padding: 0.5rem;
  background: var(--light-gray);
  border: 1px solid var(--medium-gray);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
}

.quick-donate-btn:hover {
  background: var(--primary-color);
  color: var(--white);
  border-color: var(--primary-color);
}

.main-actions {
  display: flex;
  gap: 0.5rem;
}

.action-btn {
  flex: 1;
  padding: 0.75rem;
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.donate-btn {
  background: var(--primary-color);
  color: var(--white);
}

.donate-btn:hover {
  background: var(--primary-dark);
}

.details-btn {
  background: var(--light-gray);
  color: var(--text-primary);
}

.details-btn:hover {
  background: var(--medium-gray);
}

.website-btn {
  background: var(--secondary-color);
  color: var(--white);
}

.website-btn:hover {
  background: var(--secondary-dark);
}

/* Charity Form Styles */
.charity-section {
  background: var(--light-gray);
  border-radius: var(--radius-lg);
  padding: 2rem;
  margin-top: 2rem;
}

.charity-section h3 {
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.charity-section p {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  cursor: pointer;
  font-weight: 600;
}

.checkbox-text {
  color: var(--text-primary);
}

.charity-form {
  margin-top: 1.5rem;
  padding-top: 1.5rem;
  border-top: 1px solid var(--medium-gray);
}

.suggested-amounts {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.suggested-amounts span {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.amount-btn {
  padding: 0.5rem 1rem;
  background: var(--white);
  border: 1px solid var(--medium-gray);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
}

.amount-btn:hover {
  background: var(--primary-color);
  color: var(--white);
  border-color: var(--primary-color);
}

.charity-preview {
  background: var(--white);
  border-radius: var(--radius-md);
  padding: 1rem;
  margin-top: 1rem;
}

.charity-info .charity-header {
  padding: 0;
  border: none;
}

.charity-details h4 {
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.charity-details p {
  color: var(--text-secondary);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.charity-stats {
  display: flex;
  gap: 1rem;
}

.charity-stats span {
  font-size: 0.8rem;
  color: var(--text-secondary);
}

.charity-impact {
  background: rgba(0, 200, 81, 0.1);
  border: 1px solid rgba(0, 200, 81, 0.3);
  border-radius: var(--radius-md);
  padding: 1rem;
  margin-top: 1rem;
}

.charity-impact p {
  color: var(--text-primary);
  margin: 0;
  font-size: 0.9rem;
}

/* Quick Actions Sidebar */
.quick-actions {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  margin-bottom: 2rem;
}

.quick-actions h3 {
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.quick-actions .action-btn {
  width: 100%;
  margin-bottom: 0.75rem;
  justify-content: flex-start;
}

.quick-actions .action-btn:last-child {
  margin-bottom: 0;
}

/* Responsive Charity Styles */
@media (max-width: 768px) {
  .charity-header {
    flex-direction: column;
    text-align: center;
    gap: 1.5rem;
  }

  .charity-summary {
    justify-content: center;
  }

  .charity-content {
    flex-direction: column;
  }

  .charity-sidebar {
    width: 100%;
    order: 2;
  }

  .charity-main {
    order: 1;
  }

  .charities-grid {
    grid-template-columns: 1fr;
  }

  .charity-tabs {
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .charity-tabs::-webkit-scrollbar {
