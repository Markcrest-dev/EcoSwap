  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
}

.quick-action-btn:hover {
  background: var(--secondary-dark);
  transform: translateY(-2px);
}

.filter-summary {
  background: var(--light-gray);
  padding: 1rem;
  border-radius: var(--radius-md);
}

.summary-items {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  font-size: 0.85rem;
}

.summary-label {
  color: var(--text-secondary);
}

.summary-value {
  font-weight: 600;
  color: var(--text-primary);
}

/* Items List */
.items-list {
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.items-list h3 {
  padding: 1rem 1.5rem;
  background: var(--light-gray);
  margin: 0;
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  border-bottom: 1px solid var(--medium-gray);
}

.items-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

.no-items-found {
  text-align: center;
  padding: 2rem;
  color: var(--text-secondary);
}

.no-items-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.no-items-found h4 {
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

/* Item Location Card */
.item-location-card {
  background: var(--white);
  border: 2px solid var(--light-gray);
  border-radius: var(--radius-lg);
  margin-bottom: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  overflow: hidden;
}

.item-location-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  border-color: var(--medium-gray);
}

.item-location-card.selected {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(0, 200, 81, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
}

.item-category {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--white);
  font-size: 1.2rem;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-title {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 0.25rem 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-meta {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  font-size: 0.8rem;
  color: var(--text-secondary);
}

.item-location,
.item-distance {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-actions {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.item-status {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--white);
  font-size: 0.8rem;
}

.expand-btn {
  background: none;
  border: none;
  font-size: 1rem;
  cursor: pointer;
  color: var(--text-secondary);
  padding: 0.25rem;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.expand-btn:hover {
  background: var(--light-gray);
  color: var(--text-primary);
}

.card-content {
  padding: 0 1rem 1rem 1rem;
  border-top: 1px solid var(--light-gray);
  margin-top: 1rem;
  padding-top: 1rem;
}

.item-description {
  margin-bottom: 1rem;
}

.item-description p {
  font-size: 0.9rem;
  color: var(--text-secondary);
  line-height: 1.4;
  margin: 0;
}

.item-details {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  font-size: 0.85rem;
}

.detail-label {
  color: var(--text-secondary);
  font-weight: 600;
}

.detail-value {
  color: var(--text-primary);
}

.item-stats {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
  padding: 0.75rem;
  background: var(--light-gray);
  border-radius: var(--radius-md);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  font-size: 0.8rem;
}

.stat-icon {
  font-size: 0.9rem;
}

.stat-value {
  font-weight: 600;
  color: var(--text-primary);
}

.stat-label {
  color: var(--text-secondary);
}

.card-actions-expanded {
  display: flex;
  gap: 0.5rem;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-size: 0.8rem;
  font-weight: 600;
  transition: all 0.3s ease;
  flex: 1;
  justify-content: center;
}

.contact-btn {
  background: var(--primary-color);
  color: var(--white);
}

.contact-btn:hover {
  background: var(--primary-dark);
}

.directions-btn {
  background: var(--secondary-color);
  color: var(--white);
}

.directions-btn:hover {
  background: var(--secondary-dark);
}

.action-btn:disabled {
  background: var(--medium-gray);
  color: var(--text-secondary);
  cursor: not-allowed;
}

.item-image-preview {
  height: 120px;
  overflow: hidden;
  margin: 1rem;
  border-radius: var(--radius-md);
}

.item-image-preview img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.selection-indicator {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: var(--primary-color);
  color: var(--white);
  font-size: 0.8rem;
  font-weight: 600;
}

.selection-icon {
  font-size: 1rem;
}

/* Map View */
.map-view {
  position: relative;
  width: 100%;
  height: 100%;
}

.map-controls {
  position: absolute;
  top: 1rem;
  right: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  z-index: 100;
}

.map-control-btn {
  width: 40px;
  height: 40px;
  background: var(--white);
  border: 2px solid var(--light-gray);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-size: 1.2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.map-control-btn:hover {
  background: var(--light-gray);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.map-canvas {
  width: 100%;
  height: 100%;
  cursor: crosshair;
}

.map-legend {
  position: absolute;
  bottom: 1rem;
  left: 1rem;
  background: var(--white);
  padding: 1rem;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-md);
  z-index: 100;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
  font-size: 0.8rem;
  color: var(--text-primary);
}

.legend-item:last-child {
  margin-bottom: 0;
}

.legend-marker {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.legend-marker.user-marker {
  background: #007bff;
}

.legend-marker.item-marker {
  background: #28a745;
}

.legend-line {
  width: 20px;
  height: 2px;
  background: #007bff;
  border: 1px dashed #007bff;
}

.map-popup {
  position: absolute;
  top: 1rem;
  left: 1rem;
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  z-index: 200;
  min-width: 250px;
  max-width: 300px;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background: var(--light-gray);
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
}

.popup-header h4 {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
}

.popup-close {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: var(--text-secondary);
  padding: 0.25rem;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.popup-close:hover {
  background: var(--medium-gray);
  color: var(--text-primary);
}

.popup-content {
  padding: 1rem;
}

.popup-content p {
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin: 0 0 1rem 0;
  line-height: 1.4;
}

.popup-meta {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  font-size: 0.8rem;
}

.popup-category,
.popup-distance {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  color: var(--text-primary);
  font-weight: 600;
}

/* Responsive Map */
@media (max-width: 768px) {
  .map-page {
    padding: 1rem;
    height: calc(100vh - 150px);
  }

  .map-header {
    flex-direction: column;
    text-align: center;
    gap: 1.5rem;
  }

  .location-summary {
    justify-content: center;
  }

  .map-content {
    flex-direction: column;
    gap: 1rem;
  }

  .map-sidebar {
    width: 100%;
    order: 2;
  }

  .map-container {
    height: 300px;
    order: 1;
  }

  .items-list {
    max-height: 300px;
  }

  .map-popup {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 90vw;
  }

  .radius-buttons {
    grid-template-columns: repeat(2, 1fr);
  }

  .card-actions-expanded {
    flex-direction: column;
  }
}

/* Admin Stats */
.admin-stats {
  padding: 2rem;
}

.stats-header {
  margin-bottom: 2rem;
}

.stats-header h2 {
  font-size: 1.8rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.stats-header p {
  color: var(--text-secondary);
}

.admin-stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.admin-stat-card {
  background: var(--white);
  border: 2px solid var(--light-gray);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  transition: all 0.3s ease;
  animation: slideInUp 0.6s ease;
}

.admin-stat-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.admin-stat-card .stat-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.trend-indicator {
  font-size: 0.85rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.platform-health {
  background: var(--light-gray);
  border-radius: var(--radius-lg);
  padding: 2rem;
}

.health-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.health-header h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: var(--text-primary);
}

.health-status {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.status-indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.status-indicator.healthy {
  background: #28a745;
  box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
}

.status-text {
  font-weight: 600;
  color: var(--text-primary);
}

.health-metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
}

.health-metric {
  background: var(--white);
  padding: 1rem;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.metric-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
}

.metric-name {
  font-weight: 600;
  color: var(--text-primary);
}

.metric-value {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.metric-percentage {
  font-weight: 600;
  color: var(--text-primary);
}

/* User Management */
.user-management {
  padding: 2rem;
}

.management-header {
  margin-bottom: 2rem;
}

.management-header h2 {
  font-size: 1.8rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.management-header p {
  color: var(--text-secondary);
}

.management-controls {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: var(--light-gray);
  border-radius: var(--radius-lg);
}

.search-section {
  flex: 1;
}

.filter-section {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.filter-group,
.sort-group {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.filter-group label,
.sort-group label {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.9rem;
}

.filter-group select,
.sort-group select {
  padding: 0.5rem;
  border: 2px solid var(--medium-gray);
  border-radius: var(--radius-md);
  background: var(--white);
  font-size: 0.9rem;
}

.users-table-container {
  overflow-x: auto;
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

.users-table {
  width: 100%;
  border-collapse: collapse;
}

.users-table th,
.users-table td {
  padding: 1rem;
  text-align: left;
  border-bottom: 1px solid var(--light-gray);
}

.users-table th {
  background: var(--light-gray);
  font-weight: 600;
  color: var(--text-primary);
  position: sticky;
  top: 0;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: var(--primary-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--white);
  font-weight: 700;
  font-size: 0.9rem;
  text-transform: uppercase;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.user-name {
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.admin-badge {
  font-size: 0.8rem;
}

.user-verification {
  font-size: 0.8rem;
}

.verified {
  color: #28a745;
}

.unverified {
  color: #ffc107;
}

.activity-stats {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.activity-stats .stat {
  font-size: 0.85rem;
  color: var(--text-secondary);
}

.user-actions {
  display: flex;
  gap: 0.5rem;
}

.action-btn {
  padding: 0.5rem;
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-size: 1rem;
  transition: all 0.3s ease;
  background: var(--light-gray);
}

.action-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-sm);
}

.view-btn:hover {
  background: #007bff;
}

.edit-btn:hover {
  background: #28a745;
}

.suspend-btn:hover {
  background: #ffc107;
}

.activate-btn:hover {
  background: #17a2b8;
}

.no-users {
  text-align: center;
  padding: 4rem 2rem;
  background: var(--light-gray);
  border-radius: var(--radius-lg);
}

.no-users-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
}

.no-users h3 {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.no-users p {
  color: var(--text-secondary);
}

/* Page Header Styles */
.page-header {
  text-align: center;
  margin-bottom: 3rem;
  position: relative;
}

.page-header h2 {
  font-family: 'Poppins', sans-serif;
  color: var(--text-primary);
  margin-bottom: 1rem;
  font-size: 2.5rem;
  font-weight: 600;
  position: relative;
}

.page-header h2::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  background: var(--primary-gradient);
  border-radius: 2px;
}

.page-header p {
  color: var(--text-secondary);
  font-size: 1.2rem;
  font-weight: 400;
  max-width: 500px;
  margin: 0 auto;
}



/* Form Styles */
.item-form-container {
  background: var(--card-gradient);
  padding: 3rem;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  margin-bottom: 3rem;
  border: 1px solid var(--medium-gray);
  position: relative;
  overflow: hidden;
}

.item-form-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: var(--primary-gradient);
}

.item-form {
  display: grid;
  gap: 1.5rem;
  max-width: 700px;
  margin: 0 auto;
}

.form-group {
  display: flex;
  flex-direction: column;
  position: relative;
}

.form-group label {
  margin-bottom: 0.8rem;
  font-weight: 600;
  color: var(--text-primary);
  font-size: 1.1rem;
}

.form-group input,
.form-group textarea,
.form-group select {
  padding: 1rem 1.2rem;
  border: 2px solid var(--medium-gray);
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-weight: 500;
  background: var(--white);
  transition: all 0.3s ease;
  outline: none;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(0, 200, 81, 0.1);
  transform: translateY(-1px);
}

.form-group textarea {
  min-height: 120px;
  resize: vertical;
  font-family: inherit;
}

.image-preview {
  margin-top: 1.5rem;
  text-align: center;
}

.image-preview img {
  max-width: 250px;
  max-height: 250px;
  border-radius: var(--radius-md);
  object-fit: cover;
  box-shadow: var(--shadow-md);
  border: 3px solid var(--white);
}

.submit-btn {
  padding: 1.2rem 3rem;
  background: var(--primary-gradient);
  color: var(--white);
  border: none;
  border-radius: var(--radius-xl);
  font-size: 1.2rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: var(--secondary-gradient);
  transition: left 0.3s ease;
  z-index: -1;
}

.submit-btn:hover::before {
  left: 0;
}

.submit-btn:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-colored);
}

.submit-btn:active {
  transform: translateY(-1px);
}

/* Item List and Card Styles */
.item-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.item-card {
  background: var(--card-gradient);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1px solid var(--medium-gray);
  position: relative;
}

.item-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--primary-gradient);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.item-card:hover::before {
  transform: scaleX(1);
}

.item-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-lg);
}

.item-image {
  height: 220px;
  overflow: hidden;
  position: relative;
}

.item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.item-card:hover .item-image img {
  transform: scale(1.05);
}

.item-content {
  padding: 2rem;
}

.item-content h3 {
  color: var(--text-primary);
  margin-bottom: 0.8rem;
  font-size: 1.3rem;
  font-weight: 600;
  font-family: 'Poppins', sans-serif;
}

.item-location {
  color: var(--text-secondary);
  font-size: 0.95rem;
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.item-location::before {
  content: '📍';
  font-size: 0.9rem;
}

.item-date {
  color: var(--text-secondary);
  font-size: 0.85rem;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.item-date::before {
  content: '📅';
  font-size: 0.8rem;
}

.item-category {
  display: inline-block;
  background: var(--primary-gradient);
  color: var(--white);
  padding: 0.4rem 1rem;
  border-radius: var(--radius-lg);
  font-size: 0.85rem;
  font-weight: 600;
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: var(--shadow-sm);
}

.item-description {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
  line-height: 1.6;
  font-size: 1rem;
}

.request-btn {
  width: 100%;
  padding: 1rem;
  background: var(--primary-gradient);
  color: var(--white);
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  font-size: 1rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.request-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: var(--secondary-gradient);
  transition: left 0.3s ease;
  z-index: -1;
}

.request-btn:hover::before {
  left: 0;
}

.request-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* Contact Section Styles */
.contact-section {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 3px solid var(--medium-gray);
  position: relative;
}

.contact-section::before {
  content: '';
  position: absolute;
  top: -3px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 3px;
  background: var(--primary-gradient);
}

.contact-section h3 {
  color: var(--text-primary);
  margin-bottom: 1rem;
  font-size: 1.4rem;
  font-weight: 600;
  font-family: 'Poppins', sans-serif;
  text-align: center;
}

.contact-note {
  color: var(--text-secondary);
  font-size: 1rem;
  margin-bottom: 2rem;
  font-style: italic;
  text-align: center;
  background: var(--light-gray);
  padding: 1rem;
  border-radius: var(--radius-md);
  border-left: 4px solid var(--accent-color);
}

.contact-info {
  margin-top: 1.5rem;
  padding: 2rem;
  background: var(--card-gradient);
  border-radius: var(--radius-lg);
  border: 2px solid var(--primary-color);
  box-shadow: var(--shadow-md);
  position: relative;
}

.contact-info::before {
  content: '💬';
  position: absolute;
  top: -15px;
  left: 20px;
  background: var(--white);
  padding: 0.5rem;
  border-radius: 50%;
  font-size: 1.2rem;
  box-shadow: var(--shadow-sm);
}

.contact-info h4 {
  color: var(--text-primary);
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
  font-weight: 600;
  font-family: 'Poppins', sans-serif;
  text-align: center;
}

.contact-method {
  margin-bottom: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.contact-method strong {
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 600;
}

.contact-link {
  color: var(--white);
  text-decoration: none;
  font-weight: 600;
  padding: 1rem 1.5rem;
  background: var(--primary-gradient);
  border-radius: var(--radius-md);
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: inline-block;
  margin-top: 0.5rem;
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
}

.contact-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: var(--secondary-gradient);
  transition: left 0.3s ease;
  z-index: -1;
}

.contact-link:hover::before {
  left: 0;
}

.contact-link:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.contact-info .contact-note {
  margin-top: 1.5rem;
  margin-bottom: 0;
  font-size: 0.9rem;
  color: var(--text-secondary);
  border-top: 2px solid var(--medium-gray);
  padding-top: 1rem;
  text-align: center;
  font-style: italic;
}

/* Empty State Styles */
.empty-state {
  text-align: center;
  padding: 4rem 2rem;
  background: var(--card-gradient);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  margin: 2rem 0;
  border: 2px dashed var(--medium-gray);
}

.empty-state h2 {
  margin-bottom: 1rem;
  color: var(--text-primary);
  font-size: 2rem;
  font-weight: 600;
  font-family: 'Poppins', sans-serif;
}

.empty-state p {
  color: var(--text-secondary);
  font-size: 1.1rem;
  margin-bottom: 2rem;
}

.empty-state::before {
  content: '🌱';
  display: block;
  font-size: 4rem;
  margin-bottom: 1rem;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10px); }
  60% { transform: translateY(-5px); }
}

/* Footer Styles */
footer {
  text-align: center;
  margin-top: 4rem;
  padding: 3rem 2rem;
  background: var(--card-gradient);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border-top: 3px solid var(--primary-color);
  position: relative;
}

footer::before {
  content: '';
  position: absolute;
  top: -3px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 3px;
  background: var(--primary-gradient);
}

footer p {
  color: var(--text-secondary);
  font-size: 1.1rem;
  font-weight: 500;
  margin: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
  .app {
    padding: 0.5rem;
  }

  .logo h1 {
    font-size: 2.5rem;
  }

  .logo h1::after {
    font-size: 1.2rem;
    right: -15px;
  }

  .item-form-container {
    padding: 2rem 1.5rem;
  }

  .item-content {
    padding: 1.5rem;
  }



  .main-nav {
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .nav-link {
    padding: 0.8rem 2rem;
    font-size: 1rem;
    width: 200px;
    text-align: center;
  }

  .page-header h2 {
    font-size: 2rem;
  }

  .page-header p {
    font-size: 1.1rem;
  }

  .item-list {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }



  .submit-btn {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }

  .empty-state {
    padding: 3rem 1rem;
  }

  .empty-state::before {
    font-size: 3rem;
  }

  .contact-info {
    padding: 1.5rem;
  }
}

@media (max-width: 480px) {
  .logo h1 {
    font-size: 2rem;
  }

  .page-header h2 {
    font-size: 1.8rem;
  }

  .item-form-container {
    padding: 1.5rem 1rem;
  }

  .nav-link {
    padding: 0.7rem 1.5rem;
    font-size: 0.95rem;
    width: 180px;
  }



  .auth-nav {
    flex-direction: column;
    gap: 0.8rem;
  }

  .auth-link {
    padding: 0.7rem 1.2rem;
    font-size: 0.9rem;
  }

  .user-greeting {
    font-size: 0.9rem;
    padding: 0.4rem 0.8rem;
  }
}

/* Authentication Styles */
.auth-page {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
  padding: 2rem 1rem;
}

.auth-container {
  background: var(--card-gradient);
  padding: 3rem;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--medium-gray);
  width: 100%;
  max-width: 500px;
  position: relative;
  overflow: hidden;
}

.auth-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: var(--primary-gradient);
}

.auth-header {
  text-align: center;
  margin-bottom: 2.5rem;
}

.auth-header h2 {
  font-family: 'Poppins', sans-serif;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  font-size: 2rem;
  font-weight: 600;
}

.auth-header p {
  color: var(--text-secondary);
  font-size: 1.1rem;
  font-weight: 400;
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.auth-form .form-group {
  display: flex;
  flex-direction: column;
  position: relative;
}

.auth-form .form-group label {
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.95rem;
}

.auth-form .form-group input {
  padding: 1rem 1.2rem;
  border: 2px solid var(--medium-gray);
  border-radius: var(--radius-md);
  font-size: 1rem;
  font-weight: 500;
  background: var(--white);
  transition: all 0.3s ease;
  outline: none;
}

.auth-form .form-group input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(0, 200, 81, 0.1);
  transform: translateY(-1px);
}

.auth-form .form-group input.error {
  border-color: var(--secondary-color);
  box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.1);
}

.auth-form .form-group input:disabled {
  background: var(--light-gray);
  cursor: not-allowed;
  opacity: 0.7;
}

.error-message {
  color: var(--secondary-color);
  font-size: 0.85rem;
  font-weight: 500;
  margin-top: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.error-message::before {
  content: '⚠️';
  font-size: 0.8rem;
}

.general-error {
  background: rgba(255, 107, 53, 0.1);
  border: 1px solid rgba(255, 107, 53, 0.3);
  border-radius: var(--radius-sm);
  padding: 1rem;
  margin-bottom: 1rem;
  text-align: center;
}

.general-error::before {
  content: '❌';
  margin-right: 0.5rem;
}

.auth-submit-btn {
  padding: 1.2rem 2rem;
  background: var(--primary-gradient);
  color: var(--white);
  border: none;
  border-radius: var(--radius-md);
  font-size: 1.1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-top: 1rem;
}

.auth-submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: var(--secondary-gradient);
  transition: left 0.3s ease;
  z-index: -1;
}

.auth-submit-btn:hover::before {
  left: 0;
}

.auth-submit-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-colored);
}

.auth-submit-btn:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}

.auth-submit-btn:disabled:hover {
  transform: none;
  box-shadow: var(--shadow-md);
}

.auth-submit-btn:disabled:hover::before {
  left: -100%;
}

.auth-links {
  margin-top: 2rem;
  text-align: center;
}

.forgot-link {
  color: var(--primary-color);
  text-decoration: none;
  font-weight: 600;
  font-size: 0.95rem;
  transition: color 0.3s ease;
  display: inline-block;
  margin-bottom: 1.5rem;
}

.forgot-link:hover {
  color: var(--primary-dark);
  text-decoration: underline;
}

.auth-switch {
  color: var(--text-secondary);
  font-size: 0.95rem;
  margin-bottom: 1rem;
}

.switch-link {
  color: var(--primary-color);
  text-decoration: none;
  font-weight: 600;
  transition: color 0.3s ease;
}

.switch-link:hover {
  color: var(--primary-dark);
  text-decoration: underline;
}

.success-message {
  text-align: center;
  padding: 2rem;
  background: rgba(0, 200, 81, 0.1);
  border: 1px solid rgba(0, 200, 81, 0.3);
  border-radius: var(--radius-md);
  margin-bottom: 2rem;
}

.success-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.success-message p {
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 1rem;
}

.success-note {
  color: var(--text-secondary);
  font-size: 0.9rem;
  font-style: italic;
}

/* Loading States */
.auth-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: var(--bg-gradient);
}

.loading-container {
  text-align: center;
  padding: 2rem;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid var(--medium-gray);
  border-top: 4px solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 1rem;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container p {
  color: var(--text-primary);
  font-size: 1.1rem;
  font-weight: 500;
  margin: 0;
}

/* Button Loading Spinner */
.button-spinner {
  display: inline-block;
  width: 16px;
  height: 16px;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 0.5rem;
  vertical-align: middle;
}

/* Responsive styles for auth pages */
@media (max-width: 768px) {
  .auth-container {
    padding: 2rem 1.5rem;
    margin: 1rem;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .auth-header h2 {
    font-size: 1.8rem;
  }
}

@media (max-width: 480px) {
  .auth-container {
    padding: 1.5rem 1rem;
  }

  .auth-header h2 {
    font-size: 1.6rem;
  }

  .auth-submit-btn {
    padding: 1rem 1.5rem;
    font-size: 1rem;
  }
}

/* Dark mode support (optional) */
@media (prefers-color-scheme: dark) {
  :root {
    --text-primary: #e9ecef;
    --text-secondary: #adb5bd;
    --white: #212529;
    --light-gray: #343a40;
    --medium-gray: #495057;
    --card-gradient: linear-gradient(145deg, #2c3e50 0%, #34495e 100%);
    --bg-gradient: linear-gradient(135deg, #2c3e50 0%, #34495e 50%, #2c3e50 100%);
  }
}