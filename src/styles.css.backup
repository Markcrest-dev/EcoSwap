  }
}

/* Impact Page Styles */
.impact-page {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
}

.impact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding: 2rem;
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

.impact-title h1 {
  font-size: 2.5rem;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.impact-title p {
  color: var(--text-secondary);
  font-size: 1.1rem;
}

.impact-summary {
  display: flex;
  gap: 2rem;
}

.impact-tabs {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 2rem;
  border-bottom: 2px solid var(--light-gray);
}

.impact-tab {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem 1.5rem;
  background: none;
  border: none;
  border-bottom: 3px solid transparent;
  cursor: pointer;
  font-weight: 600;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.impact-tab:hover {
  background: var(--light-gray);
  color: var(--text-primary);
}

.impact-tab.active {
  color: var(--primary-color);
  border-bottom-color: var(--primary-color);
}

/* Impact Stats */
.impact-stats {
  margin-bottom: 2rem;
}

.stats-overview {
  margin-bottom: 2rem;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 2rem;
}

.overview-card {
  background: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
}

.overview-card.personal {
  border-left: 4px solid var(--primary-color);
}

.overview-card.community {
  border-left: 4px solid var(--secondary-color);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  background: var(--light-gray);
}

.card-header h3 {
  color: var(--text-primary);
  margin: 0;
}

.impact-badge,
.community-badge {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-md);
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--white);
}

.impact-badge {
  background: var(--primary-color);
}

.community-badge {
  background: var(--secondary-color);
}

.card-content {
  padding: 1.5rem;
}

.impact-metrics {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.metric {
  text-align: center;
}

.metric-value {
  display: block;
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
}

.metric-label {
  display: block;
  font-size: 0.9rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Impact Equivalents */
.impact-equivalents {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: 2rem;
  margin-bottom: 2rem;
  box-shadow: var(--shadow-md);
}

.impact-equivalents h3 {
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.impact-equivalents p {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
}

.equivalents-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.equivalent-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: var(--light-gray);
  border-radius: var(--radius-md);
}

.equivalent-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.equivalent-content {
  flex: 1;
}

.equivalent-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
}

.equivalent-label {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

/* Impact Chart */
.impact-chart {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: 2rem;
  margin-bottom: 2rem;
  box-shadow: var(--shadow-md);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.chart-header h3 {
  color: var(--text-primary);
  margin: 0;
}

.chart-legend {
  display: flex;
  gap: 1rem;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.legend-color {
  width: 12px;
  height: 12px;
  border-radius: 2px;
}

.chart-container {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
}

.chart-y-axis {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60px;
}

.y-axis-label {
  writing-mode: vertical-rl;
  text-orientation: mixed;
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin-bottom: 1rem;
}

.y-axis-ticks {
  display: flex;
  flex-direction: column-reverse;
  height: 200px;
  justify-content: space-between;
}

.y-tick {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.tick-label {
  font-size: 0.8rem;
  color: var(--text-secondary);
}

.tick-line {
  width: 5px;
  height: 1px;
  background: var(--medium-gray);
}

.chart-content {
  flex: 1;
}

.chart-bars {
  display: flex;
  gap: 1rem;
  align-items: end;
  height: 200px;
}

.month-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bars-container {
  display: flex;
  gap: 2px;
  align-items: end;
  margin-bottom: 0.5rem;
}

.bar {
  width: 20px;
  min-height: 2px;
  border-radius: 2px 2px 0 0;
  position: relative;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.bar:hover {
  opacity: 0.8;
}

.bar-value {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 0.7rem;
  color: var(--text-secondary);
  white-space: nowrap;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.bar:hover .bar-value {
  opacity: 1;
}

.month-label {
  font-size: 0.8rem;
  color: var(--text-secondary);
  text-align: center;
}

.chart-summary {
  border-top: 1px solid var(--light-gray);
  padding-top: 1rem;
}

.summary-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 1rem;
}

.summary-stat {
  text-align: center;
}

.summary-stat .stat-label {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.summary-stat .stat-value {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--text-primary);
}

.chart-insights {
  background: var(--light-gray);
  border-radius: var(--radius-md);
  padding: 1rem;
}

.insights {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.insight {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.insight-icon {
  font-size: 1rem;
}

/* Impact Goals */
.impact-goals {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: 2rem;
  box-shadow: var(--shadow-md);
}

.goals-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.goals-title h2 {
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.goals-title p {
  color: var(--text-secondary);
}

.goals-actions {
  display: flex;
  gap: 0.5rem;
}

.edit-goals-btn,
.suggest-btn,
.cancel-btn,
.save-btn {
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
}

.edit-goals-btn {
  background: var(--primary-color);
  color: var(--white);
}

.suggest-btn {
  background: var(--secondary-color);
  color: var(--white);
}

.cancel-btn {
  background: var(--medium-gray);
  color: var(--text-primary);
}

.save-btn {
  background: var(--success-color);
  color: var(--white);
}

.goals-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.goal-section h3 {
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.goal-card {
  background: var(--light-gray);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  margin-bottom: 1rem;
}

.goal-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.goal-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.goal-info {
  flex: 1;
}

.goal-info h4 {
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.goal-target {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--primary-color);
}

.goal-input {
  width: 100px;
  padding: 0.5rem;
  border: 1px solid var(--medium-gray);
  border-radius: var(--radius-md);
  font-size: 1rem;
}

.goal-progress {
  margin-top: 1rem;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: var(--medium-gray);
  border-radius: var(--radius-sm);
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.progress-fill {
  height: 100%;
  transition: width 0.3s ease;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin-bottom: 0.25rem;
}

.progress-percentage {
  font-weight: 600;
}

.progress-message {
  font-size: 0.8rem;
  color: var(--text-secondary);
  font-style: italic;
}

/* Responsive Impact Styles */
@media (max-width: 768px) {
  .impact-header {
    flex-direction: column;
    text-align: center;
    gap: 1.5rem;
  }

  .impact-summary {
    justify-content: center;
  }

  .overview-grid {
    grid-template-columns: 1fr;
  }

  .impact-metrics {
    grid-template-columns: 1fr;
  }

  .equivalents-grid {
    grid-template-columns: 1fr;
  }

  .chart-container {
    flex-direction: column;
  }

  .chart-y-axis {
    flex-direction: row;
    width: 100%;
    height: auto;
  }

  .y-axis-label {
    writing-mode: horizontal-tb;
    text-orientation: mixed;
  }

  .goals-grid {
    grid-template-columns: 1fr;
  }

  .goals-header {
    flex-direction: column;
    text-align: center;
    gap: 1rem;
  }

  .impact-tabs {
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .impact-tabs::-webkit-scrollbar {
    display: none;
  }
}

/* Enhanced Button Styles */
.btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: var(--primary-gradient);
  color: var(--white);
  border: none;
  border-radius: var(--radius-lg);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  text-decoration: none;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-md);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--primary-gradient-hover);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.btn:hover::before {
  left: 100%;
}

.btn:hover::after {
  opacity: 1;
}

.btn:hover {
  transform: translateY(-3px) scale(1.02);
  box-shadow: var(--shadow-xl), var(--glow-primary);
}

.btn:active {
  transform: translateY(-1px) scale(0.98);
}

.btn-secondary {
  background: var(--secondary-gradient);
}

.btn-secondary::after {
  background: linear-gradient(135deg, #e85d04, #d00000);
}

.btn-secondary:hover {
  box-shadow: var(--shadow-xl), var(--glow-secondary);
}

.btn-outline {
  background: transparent;
  color: var(--primary-color);
  border: 2px solid var(--primary-color);
  backdrop-filter: blur(10px);
}

.btn-outline::after {
  background: var(--primary-gradient);
}

.btn-outline:hover {
  color: var(--white);
  border-color: transparent;
}

.btn-success {
  background: linear-gradient(135deg, var(--success-color), #20c997);
}

.btn-success:hover {
  box-shadow: var(--shadow-xl), var(--glow-success);
}

.btn-danger {
  background: linear-gradient(135deg, var(--danger-color), #c82333);
}

.btn-danger:hover {
  box-shadow: var(--shadow-xl), var(--glow-danger);
}

.btn-glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: var(--text-primary);
}

.btn-glass:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(0, 200, 81, 0.3);
}

/* Enhanced Card Styles */
.card {
  background: var(--card-gradient);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  border: 1px solid rgba(0, 200, 81, 0.1);
  backdrop-filter: blur(10px);
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--primary-gradient);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card:hover::before {
  opacity: 1;
}

.card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: var(--shadow-xl), var(--glow-primary);
  border-color: rgba(0, 200, 81, 0.3);
}

/* Enhanced Form Styles */
.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  font-size: 0.95rem;
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 2px solid var(--light-gray);
  border-radius: var(--radius-lg);
  font-size: 1rem;
  background: var(--white);
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(0, 200, 81, 0.1);
  background: rgba(255, 255, 255, 0.95);
}

/* Enhanced Loading Animations */
.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(0, 200, 81, 0.1);
  border-left: 4px solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-content {
  text-align: center;
  padding: 3rem;
  color: var(--text-secondary);
}

.loading-content h2 {
  color: var(--text-primary);
  margin: 1rem 0 0.5rem;
}

/* Enhanced Scrollbar */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--light-gray);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: var(--primary-gradient);
  border-radius: 4px;
  transition: background 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-gradient-hover);
}

/* Enhanced Focus States */
*:focus-visible {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
  border-radius: var(--radius-sm);
}

/* Enhanced Selection */
::selection {
  background: rgba(0, 200, 81, 0.2);
  color: var(--text-primary);
}

/* Page Transition Effects */
.page-enter {
  opacity: 0;
  transform: translateY(20px);
}

.page-enter-active {
  opacity: 1;
  transform: translateY(0);
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.page-exit {
  opacity: 1;
  transform: translateY(0);
}

.page-exit-active {
  opacity: 0;
  transform: translateY(-20px);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Micro-interactions */
.interactive-element {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.interactive-element:hover {
  transform: translateY(-2px);
}

.interactive-element:active {
  transform: translateY(0) scale(0.98);
}

/* Beautiful Tooltips */
[data-tooltip] {
  position: relative;
}

[data-tooltip]:hover::before {
  content: attr(data-tooltip);
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.9);
  color: white;
  padding: 0.5rem 0.75rem;
  border-radius: var(--radius-md);
  font-size: 0.8rem;
  white-space: nowrap;
  z-index: 1000;
  animation: fadeInUp 0.3s ease;
}

[data-tooltip]:hover::after {
  content: '';
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%) translateY(100%);
  border: 4px solid transparent;
  border-top-color: rgba(0, 0, 0, 0.9);
  z-index: 1000;
}

/* Enhanced Accessibility */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }

  .float,
  .logo-icon,
  body::before {
    animation: none !important;
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  :root {
    --primary-color: #0066cc;
    --secondary-color: #cc6600;
    --text-primary: #000000;
    --text-secondary: #333333;
    --border-color: #000000;
  }

  .nav-link,
  .btn,
  .card {
    border: 2px solid var(--border-color);
  }
}

/* Dark Mode Preparation */
@media (prefers-color-scheme: dark) {
  :root {
    --background: #1a1a1a;
    --white: #2d2d2d;
    --light-gray: #3d3d3d;
    --medium-gray: #4d4d4d;
    --text-primary: #ffffff;
    --text-secondary: #cccccc;
    --bg-gradient: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }

  body::before {
    opacity: 0.3;
  }

  .main-header {
    background: rgba(45, 45, 45, 0.95);
    border-bottom-color: rgba(0, 200, 81, 0.2);
  }
}

